<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="678dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Hobileriniz neler?"
            android:textSize="20dp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/cbKitap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kitap okumak"
            android:checked="true"/>

        <CheckBox
            android:id="@+id/cbBalik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Balik tutmak" />

        <CheckBox
            android:id="@+id/cbMuzik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Muzik dinlemek" />

        <CheckBox
            android:id="@+id/cbOyun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Oyun oynamak" />

        <Button
            android:id="@+id/bOnayla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Onayla" />

        <TextView
            android:id="@+id/tvCikti"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:text="Hobileriniz:"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>